extends layout.pug

block content
  article.grid-container.portfolio-intro
    div
      h1 JavaScript Projects
      p.lead.text-light
        | Simple portfolio built with Express and Pug to show off a few of my JavaScript projects.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href= "project" + project.id)
            img.thumbnail(src= "static/" + project.image_urls[1])
            h5= project_name
